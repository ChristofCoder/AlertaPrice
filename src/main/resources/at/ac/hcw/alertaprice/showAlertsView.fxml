<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="showAlertsPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.hcw.alertaprice.ShowAlertsController">

    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <!-- TOP: Title -->
            <top>
                <Label fx:id="myLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="ap-title" text="Label">
                    <BorderPane.margin>
                        <Insets bottom="14" left="0" right="0" top="0" />
                    </BorderPane.margin>
                </Label>
            </top>

            <!-- LEFT: Controls -->
            <left>
                <VBox prefWidth="260" spacing="10" BorderPane.alignment="TOP_LEFT">
                    <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updatePrices" styleClass="primary-btn" text="Update Prices" />

                    <Label fx:id="outputLabel" textFill="#f50202" wrapText="true" />

                    <VBox spacing="6">
                        <Label styleClass="ap-field-label" text="Start Auto-Update every" wrapText="true" />
                        <HBox alignment="CENTER_LEFT" spacing="6">
                            <TextField fx:id="inputTextfield" minWidth="60" prefWidth="60" />
                            <Label styleClass="ap-field-label" text="seconds." />
                        </HBox>
                    </VBox>

                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Button fx:id="start" mnemonicParsing="false" onAction="#start" styleClass="secondary-btn" text="Start" />
                        <Button fx:id="stopButton" mnemonicParsing="false" onAction="#stopclick" styleClass="danger-btn" text="Stop" />
                    </HBox>

                    <!-- push bottom buttons down -->
                    <Region VBox.vgrow="ALWAYS" />

                    <HBox spacing="10">
                        <Button fx:id="quitButton" mnemonicParsing="false" onAction="#quit" styleClass="danger-btn" text="Quit" />
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#goBack" styleClass="secondary-btn" text="Back" />
                    </HBox>
                </VBox>
            </left>

            <!-- CENTER: Toolbar + Table -->
            <center>
                <VBox spacing="10" BorderPane.alignment="CENTER">
                    <!-- Add / Delete / Edit toolbar (aligned) -->
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <!-- left action -->
                            <ColumnConstraints hgrow="NEVER" />
                            <!-- spacer column that grows -->
                            <ColumnConstraints hgrow="ALWAYS" />
                            <!-- right button -->
                            <ColumnConstraints hgrow="NEVER" />
                            <!-- right id field -->
                            <ColumnConstraints hgrow="NEVER" />
                        </columnConstraints>

                        <!-- Row 0: Add (left) + Delete (right) -->
                        <Button fx:id="addAlertButton" mnemonicParsing="false" onAction="#addAlert" styleClass="primary-btn" text="Add new Alert" GridPane.columnIndex="0" GridPane.rowIndex="0" />

                        <Region GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Button fx:id="deleteAlertsButton" minWidth="110" mnemonicParsing="false" onAction="#deleteAlert" prefWidth="110" styleClass="danger-btn" text="Delete Alert" GridPane.columnIndex="2" GridPane.rowIndex="0" />

                        <TextField fx:id="idTextField" maxWidth="70" minWidth="70" onAction="#deleteAlert" prefWidth="70" promptText="ID" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                        <!-- Row 1: (blank left) + Edit (right) aligned with Delete -->
                        <Region GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Button fx:id="editAlertButton" minWidth="110" mnemonicParsing="false" onAction="#switchToEditView" prefHeight="26.0" prefWidth="110" styleClass="secondary-btn" text="Edit Alert" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                        <TextField fx:id="editAlertTextField" maxWidth="70" minWidth="70" prefHeight="26.0" prefWidth="70" promptText="ID" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                    </GridPane>

                    <!-- Table grows with window -->
                    <TableView fx:id="itemTable" styleClass="ap-table" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="id" prefWidth="50.0" text="ID" />
                            <TableColumn fx:id="name" prefWidth="280.0" text="Name" />
                            <TableColumn fx:id="currentValue" prefWidth="120.0" text="Price (â‚¬)" />
                        </columns>
                    </TableView>
                </VBox>
            </center>

        </BorderPane>
    </children>
</AnchorPane>
