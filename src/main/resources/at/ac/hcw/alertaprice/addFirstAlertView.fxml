<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@styles.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="at.ac.hcw.alertaprice.AddFirstAlertController">
   <children>
      <VBox spacing="14" alignment="TOP_CENTER"
            AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

         <Region prefHeight="10" />

         <Label fx:id="firstAlertLabel" alignment="CENTER" text="Label" wrapText="true">
            <font>
               <Font size="37.0" />
            </font>
         </Label>

         <Label alignment="CENTER" text="Add New Alert" wrapText="true">
            <font>
               <Font size="16.0" />
            </font>
         </Label>

         <GridPane hgap="12" vgap="12" maxWidth="520">
            <columnConstraints>
               <ColumnConstraints hgrow="NEVER" />
               <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="nameTextField" promptText="Produktname, Markt" maxWidth="1.7976931348623157E308"
                       GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="URL:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="urlTextField" promptText="https://www.shop.at/product.html" maxWidth="1.7976931348623157E308"
                       GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="CSS Selector:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="cssTextField" promptText="div.example" maxWidth="1.7976931348623157E308"
                       GridPane.rowIndex="2" GridPane.columnIndex="1" />
         </GridPane>

         <Label fx:id="errorLabel" maxWidth="520" wrapText="true" />

         <HBox spacing="12" alignment="CENTER">
             <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveAlert" text="Save" styleClass="primary-btn" />
             <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearTextFields" text="Clear" styleClass="secondary-btn" />
         </HBox>

         <Region VBox.vgrow="ALWAYS" />
      </VBox>
   </children>
</AnchorPane>
